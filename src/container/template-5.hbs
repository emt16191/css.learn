<header class="header">
    <a href="/">
        {{> logo}}
    </a>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with messages}}
    <div class="messages">
        <h1 class="messages_title">{{title}}</h1>

        {{#each list}}
        <div class="msg">
            <stong class="msg_name">{{name}}</stong>
            <p class="msg_text">{{message}}</p>
            <span class="msg_day">{{day}}</span>
        </div>
        {{/each}}

        <a href="#" class="messages_link">All messages</a>

    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>

        <div class="form_inputs">
            {{#each inputs}}
            <input class="form_input" id="form-input-{{id}}" placeholder="{{placeholder}}" type="{{type}}"
                name="{{name}}" />
            {{/each}}
        </div>

        <div class="form_checkbox">
            {{#with checkbox}}
            <input type="checkbox" name="{{name}}" id="{{name}}">
            <div></div>
            <label for="{{name}}">{{label}}</label>
        </div>

        {{/with}} <button type="submit" class="form_button">{{button}}</button>

        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

<div class="advantages">
    {{#each advantages}}
    <div class="advantage">
        <strong class="advantage_title">{{title}}</strong>
        <p class="advantage_text">{{text}}</p>
    </div>
    {{/each}}
</div>

<footer class="footer">
    <div>
        {{> logo}}

        <span class="footer_copyright">Copyright 2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>

        <span class="footer_links">{{> nav list=links isVertical=true}}</span>
    </div>
    {{/each}}
</footer>