<header class="header">
    <a href="/">
        {{> logo}}
    </a>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    <div class="messages">Messages</div>
    <div class="form">Form</div>
</main>

<footer class="footer">
    <div>
        {{> logo}}

        <span class="footer_copyright">Copyright 2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>

        <span class="footer_links">{{> nav list=links isVertical=true}}</span>
    </div>
    {{/each}}
</footer>