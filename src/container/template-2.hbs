<div class="page">
    <div class="page_content">

        <div class="page_block">
            <header class="header row g-0">
                <div class="col-3">
                    {{> logo}}
                </div>

                <nav class="header_nav col-9">
                    <div class="header_nav_right">
                        {{> nav list=header}}
                    </div>
                </nav>

            </header>
        </div>

        <div class="page_block">
            {{#with hero}}
            <div class="hero">
                {{> hero title=title text=text}}
                {{#with button}}
                <a class="button" href="{{url}}">{{text}}</a>
                {{/with}}
            </div>
            {{/with}}
        </div>

        <div class="page_block">
            Preview
        </div>

        <div class="page_block">
            List of posts
        </div>

        <div class="page_block">
            <footer class="row g-0 footer">
                <div class="col-3">
                    {{> logo}}

                    <span class="footer_copyright">Copyright 2024</span>
                </div>

                {{#each footer}}
                <div class="col-3">
                    <span class="footer_title">{{title}}</span>

                    <span class="footer_links">{{> nav list=links isVertical=true}}</span>
                </div>
                {{/each}}
            </footer>
        </div>

    </div>
</div>