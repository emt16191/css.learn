<header class="header">
    <a href="/">
        {{> logo}}
    </a>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<main class="main">
    <img src="{{image}}" alt="main image" class="main_img">

    <div class="main_content">
        <h1 class="heading">{{heading}}</h1>
        <p class="description">{{description}}</p>
        <a href="{{href}}" class="button details_button">{{button}}</a>
    </div>
</main>
{{/with}}

<section class="featured">
    {{#each featured}}
    {{> cardFeature data=this}}
    {{/each}}
</section>

<div class="actions_pad">
    {{#each actions}}
    <div class="actions_item">
        <h3 class="actions_title">{{heading}}</h3>
        <a href="{{url}}" class="button actions_button">{{text}}</a>
    </div>
    {{/each}}
</div>

<footer class="footer">
    <div>
        {{> logo}}

        <span class="footer_copyright">Copyright 2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>

        <span class="footer_links">{{> nav list=links isVertical=true}}</span>
    </div>
    {{/each}}
</footer>